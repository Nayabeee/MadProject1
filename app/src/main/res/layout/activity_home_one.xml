<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg">

    <LinearLayout
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="162dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-67dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-55dp"
            android:fontFamily="@font/poetsenone_regular"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:text="Quiz Wiz"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/text"
            />


    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shadow_into_light"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:text="Welcome to Quiz Wiz, where knowledge meets fun! Dive into a world of quizzes designed to challenge your intellect, entertain, and expand your horizons. From trivia buffs to curious minds, we have something for everyone. Get ready to test your wits, compete with your fellows, and embark on a journey of discovery. Let's quiz!"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />


    <Button
        android:id="@+id/signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/intro"
        android:layout_marginTop="350dp"
        android:backgroundTint="@color/light_blue"
        android:text="Sign in"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/white"
        android:id="@+id/TextView1"
        android:layout_below="@id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Sign Up"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/black"/>

</RelativeLayout>
